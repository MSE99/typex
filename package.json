{
    "name": "typex",
    "module": "index.ts",
    "type": "module",
    "scripts": {
        "format": "prettier . --write",
        "build": "bun build ./src/cli.ts --compile --outfile ./bin/typex",
        "ci": "prettier . --check",
        "test": "vitest"
    },
    "bin": {
        "typex": "./bin/typex"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "prettier": "^3.3.3",
        "prettier-plugin-organize-imports": "^4.1.0",
        "vitest": "^2.1.4"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "commander": "^12.1.0",
        "glob": "^11.0.0",
        "ts-morph": "^24.0.0"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 120,
        "singleQuote": false,
        "bracketSameLine": false,
        "bracketSpacing": true,
        "semi": true,
        "plugins": [
            "prettier-plugin-organize-imports"
        ]
    }
}
