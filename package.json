{
    "name": "@aramtech/typex",
    "module": "index.ts",
    "version": "1.0.1",
    "scripts": {
        "format": "prettier . --write",
        "build": "esbuild ./src/cli.ts --bundle --platform=node --outfile=./bin/typex.cjs --packages=external",
        "ci": "prettier . --check && vitest && bun run build",
        "test": "vitest"
    },
    "bin": {
        "typex": "bin/typex.cjs"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "esbuild": "^0.24.0",
        "prettier": "^3.3.3",
        "prettier-plugin-organize-imports": "^4.1.0",
        "vitest": "^2.1.4"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "commander": "^12.1.0",
        "glob": "^11.0.0",
        "ts-morph": "^24.0.0"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 120,
        "singleQuote": false,
        "bracketSameLine": false,
        "bracketSpacing": true,
        "semi": true,
        "plugins": [
            "prettier-plugin-organize-imports"
        ]
    }
}
